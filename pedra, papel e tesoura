    define("PEDRA", 1);
    define("PAPEL", 2);
    define("TESOURA", 3);

    function jogador1() 
{
    $jpgadas = array(PEDRA, PAPEL, TESOURA);
    $randomIndex = array_rand($jogadas);
    return $jogadas[$randomIndex];
}

    function jogar($jogador, $computador)
{
    if ($jogador == $copmutador) 
{
    return "empate!";
